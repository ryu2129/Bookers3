<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>
			<h2>New book</h2>
			<%= render 'books/newpost', book: @book %>
		</div>

    <div class="col-xs-9">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :size => '100x100', fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>






